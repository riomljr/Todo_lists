    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description, class: "form-control"  %>
  </div>

  <div class="mb-3">
    <%= form.label :priority, style: "display: block" %>
    <%= form.number_field :priority, class: "form-control"  %>
  </div>

  <div class="mb-3">
    <%= form.submit %>
  </div>
<% end %>
